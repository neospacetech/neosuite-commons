{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["ES2020", "DOM"],
      "allowJs": false,
      "jsx": "react-native",
      "declaration": true,
      "declarationDir": "dist/types",
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  